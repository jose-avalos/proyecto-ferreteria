html
	height 100%
	width 100%
	
*
	margin 0px
	padding 0px

body
	background-image url(/img/main.jpg) 
	color #000000
	font 14px/25px Arial, Helvetica, sans-serif
	height 100%
	min-width 960px
	width 100%

header
	background-image url(img/b1.png)
	background-repeat no-repeat
	border solid
	border-color #ebebec
	border-radius: 15px
	height 200px
	margin auto
	width 960px

nav
	background-image url(img/nav.jpg)
	border solid
	border-color #ebebec
	border-radius: 12px 8px 8px 12px
	height 64px
	margin auto	
	width 960px


section
	border solid
	border-color #ebebec
	height 500px
	margin auto	
	width 960px
	
aside
	border solid
	border-color #ebebec
	height 100px
	margin auto	
	width 960px
	
footer
	border solid
	border-color #ebebec					
	height 70px
	margin auto	
	width 960px

//menu
ul 
	list-style none
	margin 0px
	padding 0px

ul.menu
	border-right #7acad7 1px solid
	display inline-block
	float left	
	margin 0 1px 0 0

ul.menu li
	background url(img/transp.png) 0 0 repeat
	border-left:#82ceda 1px solid	
	border-right #53b2c3 1px solid
	float left
	line-height 17px 
	margin 0 0 0 0

ul.menu li a
	color #fff
	display block
	font-size 13px
	font-weight bold
	line-height 17px
	padding 23px 28px 24px 28px	
	text-decoration none

ul.menu li.home-page
	background url(img/transp.png) 0 0 repeat
	border-radius 8px 0 0 8px
	bordernone !important	
	display inline-block

	
ul.menu li:hover , ul.menu li.current
	background url(img/current.jpg) 0 0 repeat-x #000000
	border-left #000000 1px solid	
	border-right #000000 1px solid

ul.menu li.home-page a
	padding 21px 22px 24px 23px !important

ul.menu li.home-page span
	background url(img/home-page-img.png) 0 0 no-repeat
	display block		
	height 19px
	width 19px 

