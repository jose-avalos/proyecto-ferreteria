//menu
ul 
	list-style none
	margin 0px
	padding 0px

ul.menu
	border-right #7acad7 1px solid
	display inline-block
	float left	
	margin 0 1px 0 0

ul.menu li
	background url(../img/transp.png) 0 0 repeat
	border-left:#82ceda 1px solid	
	border-right #53b2c3 1px solid
	float left
	line-height 17px 
	margin 0 0 0 0

ul.menu li a
	color #fff
	display block
	font-size 13px
	font-weight bold
	line-height 17px
	padding 23px 28px 24px 28px	
	text-decoration none

ul.menu li.home-page
	background url(../img/transp.png) 0 0 repeat
	border-radius 8px 0 0 8px
	border none !important	
	display inline-block

	
ul.menu li:hover , ul.menu li.current
	background url(../img/current.jpg) 0 0 repeat-x #000000
	border-left #000000 1px solid	
	border-right #000000 1px solid

ul.menu li.home-page a
	padding 21px 22px 24px 23px !important

ul.menu li.home-page span
	background url(../img/home-page-img.png) 0 0 no-repeat
	display block		
	height 19px
	width 19px 

